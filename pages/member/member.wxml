<!--pages/member/member.wxml-->

<view style="width: 100%; height: 180px; background: url('/images/user_bg.png'); background-size:100% 100%; background-repeat:no-repeat;">
  <view style='height: 40rpx;'></view>
  <view style="height: 140rpx; width: 140rpx; margin: 0 auto;">
    <image src="{{userInfo.avatar}}" style="border-radius: 50%; height: 100%; width: 100%;"></image>
  </view>
  <view style="text-align: center; margin-top: 40rpx; color: #000; font-size: 34rpx;">{{userInfo.nick_name}}</view>
  <view wx:if="userInfo.level == 0" style='height: 80rpx; width: 140rpx; margin: 20rpx auto;'>
    <view style="text-align: center; background-color: #ffc107; color: #fff; border-radius: 20rpx; padding: 6rpx 20rpx;" bindtap="clickOpenRecharge">办理会员</view>
  </view>
</view>

<view class="weui-cells weui-cells_after-title">
    <navigator class="weui-cell weui-cell_access" hover-class="weui-cell_active">
        <view class="weui-cell__bd">积分兑换</view>
        <view class="weui-cell__ft weui-cell__ft_in-access"></view>
    </navigator>

<navigator class="weui-cell weui-cell_access" hover-class="weui-cell_active">
        <view class="weui-cell__bd">当前积分</view>
		<view class="weui-cell__ft">{{userInfo.score}}</view>
    </navigator>

	<navigator class="weui-cell weui-cell_access" hover-class="weui-cell_active">
        <view class="weui-cell__bd">当前等级</view>
		<view class="weui-cell__ft" wx:if="{{userInfo.level === '0'}}">暂无等级</view>
		<view class="weui-cell__ft" wx:else="">{{userInfo.level}}</view>
    </navigator>

    <navigator class="weui-cell weui-cell_access" hover-class="weui-cell_active">
        <view class="weui-cell__bd">会员介绍</view>
        <view class="weui-cell__ft weui-cell__ft_in-access"></view>
    </navigator>
</view>