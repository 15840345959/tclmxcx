/**app.wxss**/
@import './styles/weui.wxss';

.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  padding: 200rpx 0;
  box-sizing: border-box;
}

page {
  height: 100%;
  font-size: 12px;
}

.page {
  background-color: #f1f1f1;
  height: 100%;
}

.white-bg {
  background: #fff;
}

.main-bg {
  background: #60689b;
}

.white-font {
  color: #fff;
}

.grey-font {
  color: #888;
}

/* 居中样式 */

.center-style {
  display: flex;
  justify-content: center;
  align-items: center;
}

/* 100%的width */

.full-width {
  width: 100%;
}

/* 高度设置 */

.register-input-style {
  height: 44px;
  line-height: 44px;
  border-radius: 44px;
}

/* float对齐样式 */

.float-left {
  float: left;
}

.float-right {
  float: right;
}

/* 文字对齐样式 */

.text-center {
  text-align: center;
}

.text-right {
  text-align: right;
}

.text-left {
  text-align: left;
}

